<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.it.dao.BrandDAO">
    <resultMap type="com.it.entity.Brand" id="BaseResultMap">
      <id column="id" property="id" jdbcType="INTEGER"/>
      <result column="name" property="name" jdbcType="VARCHAR"/>
    </resultMap>



    <insert id="add" parameterType="com.it.entity.Brand">
        insert into Brand values(null,#{name})
    </insert>
    
    <select id="selectAll" parameterType="hashmap" resultMap="BaseResultMap">
      select * from Brand where 1=1
      <if test="key!=null and key!=''">
      and name like "%"#{key}"%"
      </if>
      order by id desc
    </select>


    <select id="findById" parameterType="int" resultType="com.it.entity.Brand">
      select * from Brand  where id=#{id}
    </select>
    

    <update id="update" parameterType="com.it.entity.Brand">
       update Brand
       <set>
         <if test="name!=null and name!=''"> name=#{name},</if>
       </set>
       where id=#{id}
    </update>
    
    
    <delete id="delete" parameterType="int">
      delete from Brand where id=#{id}
    </delete>
    
    
    
</mapper>

